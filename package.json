{
  "name": "angular-d3-cloud",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run build:lib && ng serve example --watch=false --configuration development",
    "watch:app": "ng serve example --watch=true --configuration development",
    "watch:lib": "ng build @talentia/angular-d3-cloud --watch --configuration development",
    "build:all": "npm run build:lib && npm run build:app",
    "build:lib": "ng build @talentia/angular-d3-cloud --configuration production",
    "build:app": "ng build example --configuration production",
    "clean-jest": "rimraf coverage",
    "run-jest": "node --expose-gc node_modules/jest/bin/jest.js --coverage --logHeapUsage --maxWorkers=50%",
    "run-jest:ci": "node --expose-gc node_modules/jest/bin/jest.js --coverage --logHeapUsage",
    "test": "npm run clean-jest && npm run run-jest",
    "test:ci": "npm run clean-jest && npm run run-jest:ci",
    "run-sonar": "npm run test && node fixlcov.js && node sonar-scanner.js",
    "update-browserslist": "npx browserslist@latest --update-db"
  },
  "dependencies": {
    "@angular/animations": "15.2.9",
    "@angular/common": "15.2.9",
    "@angular/compiler": "15.2.9",
    "@angular/core": "15.2.9",
    "@angular/forms": "15.2.9",
    "@angular/platform-browser": "15.2.9",
    "@angular/platform-browser-dynamic": "15.2.9",
    "@angular/router": "15.2.9",
    "d3-cloud": "1.2.5",
    "d3-scale": "4.0.2",
    "d3-scale-chromatic": "3.0.0",
    "d3-selection": "3.0.0",
    "d3-transition": "3.0.1",
    "rxjs": "7.8.0",
    "tslib": "2.5.0",
    "zone.js": "0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "15.2.8",
    "@angular/cli": "15.2.8",
    "@angular/compiler-cli": "15.2.9",
    "@types/d3-cloud": "1.2.5",
    "@types/d3-scale": "4.0.2",
    "@types/d3-scale-chromatic": "3.0.0",
    "@types/d3-selection": "3.0.3",
    "@types/d3-transition": "3.0.2",
    "@types/jest": "29.5.1",
    "@types/node": "18.11.19",
    "canvas": "2.11.2",
    "jest": "29.5.0",
    "jest-canvas-mock": "2.5.0",
    "jest-preset-angular": "13.0.1",
    "ng-packagr": "15.2.2",
    "rimraf": "3.0.2",
    "sonarqube-scanner": "2.9.1",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  }
}
